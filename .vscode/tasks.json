{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "Build Debug",
			"command": "haxe",
			"args": [
				"build.hxml",
				"-debug",
				"-D",
				"debug"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "build"
		},
		{
			"type": "process",
			"label": "Build Release",
			"command": "haxe",
			"args": [
				"build.hxml",
				"-D release"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "build"
		},
	]
}